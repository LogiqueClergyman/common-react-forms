{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src", "./rollup.config.js", "postcss.config.cjs"],
  "exclude": ["node_modules", "dist"]
}
